                        android:alpha="0.8"
                        android:gravity="left|center_vertical"
                        android:paddingTop="@dimen/activity_margin_half"
                        android:text="@string/units_Mbps"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"/>

