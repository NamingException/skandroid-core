<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_archived_results_item_height"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    tools:background="@drawable/background_gradient_radial_blue_vivid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_micro"
        android:background="@drawable/selector_summary_background_black_alpha"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_micro">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:alpha=".75"
                    android:contentDescription="@string/description_icon_download"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:id="@+id/downloadLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/archiveResultsListItemDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_bottom_result_main"
                android:layout_marginTop="@dimen/padding_top_result_main"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_peta"
                tools:text="6.6" />

            <TextView
                android:id="@+id/mbps_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/units_Mbps"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:alpha=".75"
                    android:contentDescription="@string/description_icon_upload"
                    android:src="@drawable/ic_upload" />

                <TextView
                    android:id="@+id/uploadLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/archiveResultsListItemUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_bottom_result_main"
                android:layout_marginTop="@dimen/padding_top_result_main"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_size_peta"
                tools:text="3.8"/>

            <TextView
                android:id="@+id/mbps_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/units_Mbps"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/latency_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/latency"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/loss_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/loss"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/jitter_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/jitter"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/archiveResultsListItemLatency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small_medium"
                    tools:text="35 ms" />

                <TextView
                    android:id="@+id/archiveResultsListItemPacketLoss"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small_medium"
                    tools:text="5 %" />

                <TextView
                    android:id="@+id/archiveResultsListItemJitter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small_medium"
                    tools:text="25 ms" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_micro"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archiveResultsListItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_small"
                    tools:text="4/3/12 9:35" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/archiveResultsListItemNetworkType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description_image_connectivity_type"
                        tools:src="@drawable/ic_swifi" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>